<h2>Qui est ton date ?</h2>

<div data-controller="live-search">
  <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Indique le pseudo de ton date"
    %>
    <%= submit_tag "Chercher", class: "btn btn-primary" %>
  <% end %>

  <%= form_tag "/users", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find your date"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="d-flex align-items-center flex-column">
  <p class="text-center">Ton date n'est pas encore inscrit ? Vois directement nos suggestions pour toi ;)</p>
  <div class="d-flex flex-row see-suggestions">
    <%= link_to "Allons voir", dating_suggestions_path %>
  </div>
</div>
