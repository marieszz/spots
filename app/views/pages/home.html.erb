<div class="logo">
  <%= image_tag "logo.png", alt:"spots-logo" %>
</div>

<div class="cards-home">
  <div class="description-home">
    <p>Finding the place for your next date has never been easier</p>
  </div>
</div>

<DIV class="d-flex cards-home justify-content-end">
  <div class="main-btn mx-4 my-2">
    <div>
      <% unless user_signed_in?  %>
        <%= link_to "Join us ✨", startdating_path, class:"sign-up"%>
      <% else %>
        <%#= link_to "Start your date right ✨", new_dating_path, class:"new-dating" %>
        <%= simple_form_for(@dating) do |f| %>
          <%= f.submit "Nouveau date"%>
        <%end%>
      <% end %>
    </div>
  </div>
</DIV>
