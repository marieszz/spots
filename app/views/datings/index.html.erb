<div class="text-center session-title">
  <h4>Hello <%= current_user.username.capitalize %> !</h4>
  <h1>Tous tes dates</h1>
  <h3>Tu as <%= @datings.count %> date(s) à ton actif</h3>
</div>

<% if @datings.empty? %>
  <div class="datings-empty">
    <p>Tu n'as pas encore fait de dates avec Spoots !</p>
    <%= link_to "Et si tu commençais?", new_dating_path, class:"btn btn-search-bar" %>
  </div>
<% else %>
  <div class="container">
    <div class="dating-cards">
      <% @datings.reverse.each_with_index do |dating, index| %>
        <div class="dating-card col flex-column text-center">
          <div class="row">
            <h3>Date numéro #<%= index + 1%></h3>
          </div>
          <div class="row">
            <% if dating.participants.count == 2 %>
              <h4 class="date-name">Avec... <span><%= dating.participants.where.not(user: current_user).first.user.username.capitalize %></span></h4>
            <% else %>
              <h5><%= link_to "Trouve ton date !", new_dating_participant_path(dating) %> 👈</h4>
            <% end %>
          </div>
          <div class="row">
            <h5>Notre reco :</h5>
          </div>
          <div class="row">
            <% if dating.bars.first.nil? %>
              <h6>Désolées, nous n'avons rien trouvé...</h6>
            <% else %>
              <h5 class="link-1"><%= link_to dating.bars.first.name, bar_path(dating.bars.first) %>🔍</h5>
            <% end %>
          </div>
          <div class="row">
            <h5 class="link-2"><%= link_to "Nos autres suggestions 🔍", dating_path(dating) %></h5>
          </div>
        </div>
      <% end %>
    </div>
    <p>Un nouveau date ?</p>
    <div>
      <%= link_to "Commence le ici", new_dating_path, class:"btn-search-bar" %>
    </div>
  </div>
<% end %>
