<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
      <h2 class="text-center ">Prêt pour un nouveau date ?</h2>
    <div class="users-input">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="form-actions d-flex align-items-center flex-column">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "C'est parti" %>
    </div>
  </div>
<% end %>
<div class="my-4 col d-flex align-items-end flex-column devise-shared-links">
    <%= link_to "Inscris-toi!", new_registration_path(resource_name) %>
    <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
</div>
